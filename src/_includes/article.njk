---
layout: base.njk
changeFreq: weekly
---

<div class="container my-5">
  <!-- Title -->
  <h1 class="fw-bold text-primary">{{title }}</h1>
  <!-- Blog Image -->
  <img
    src="{{ image }}"
    class="rounded mb-4 w-100"
    height="300px"
    alt="Blog Hero Image"
    style="object-fit: cover"
  />

  

  <!-- Author and Date -->
  <p class="text-muted mb-4">
    By <strong>{{ author }}</strong> - {{ date | postdate }}
  </p>

  <!-- Article Body -->
  <div class="lead">
    {{ content | safe }}
    <!-- Optional: Back to Blog Link -->
    <a href="/blog" class="btn btn-outline-secondary mt-4">‚Üê Back to Blog</a>
  </div>
</div>
